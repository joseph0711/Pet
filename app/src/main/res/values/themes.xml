<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Pet" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/skin_medium</item>
        <item name="colorPrimaryVariant">@color/skin_dark</item>
        <item name="colorOnPrimary">@color/skin_text</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/skin_light</item>
        <item name="colorSecondaryVariant">@color/skin_medium</item>
        <item name="colorOnSecondary">@color/skin_text</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!--Custom Font Family -->
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_welcome</item>
        <item name = "android:windowFullscreen">true</item>"
    </style>
</resources>